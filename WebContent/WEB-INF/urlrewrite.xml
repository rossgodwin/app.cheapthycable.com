<!--
    Configuration file for UrlRewriteFilter
    http://www.tuckey.org/urlrewrite/
    
    http://cdn.rawgit.com/paultuckey/urlrewritefilter/master/src/doc/manual/4.0/guide.html
	http://www.workingwith.me.uk/articles/scripting/mod_rewrite
-->
<urlrewrite>
	<rule>
		<condition type="request-uri" operator="notequal">^/signup(.*)$</condition>
		<condition type="request-uri" operator="notequal">^/login(.*)$</condition>
		<condition type="request-uri" operator="notequal">^/client(.*)$</condition>
		<condition type="request-uri" operator="notequal">^/app(.*)$</condition>
		<condition type="request-uri" operator="notequal">^/rest(.*)$</condition>
		<condition type="request-uri" operator="notequal">reset-password</condition>
		<condition type="request-uri" operator="notequal">signup-verified</condition>
		<condition type="request-uri" operator="notequal">alert-unsubscribe-success</condition>
		<condition type="request-uri" operator="notequal">bill-post-notify-unsubscribe-success</condition>
		<from>^/(.*)$</from>
		<to type="forward">/static/$1</to>
	</rule>
</urlrewrite>